{
  "name": "files-indexer",
  "productName": "FilesIndexer",
  "version": "2.0.0",
  "description": "Desktop application to index files and manage duplicate files",
  "author": "Nayo",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "electron-store": "^4.0.0",
    "filesize": "^4.1.2",
    "history": "^4.9.0",
    "immutability-helper": "^3.0.1",
    "ndjson": "^1.5.0",
    "pouchdb-adapter-memory": "^7.1.1",
    "pouchdb-browser": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.3",
    "winattr": "^3.0.0"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "nf start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node scripts/electron-wait-react",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "pack": "electron-builder --dir",
    "dist": "yarn build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "script-modifiedDate": "node ./scripts/updateModifiedDate.js"
  },
  "build": {
    "appId": "fr.nayo.files-indexer",
    "win": {
      "icon": "public/react-256.png",
      "target": "portable"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "electron 2.0"
  ],
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^6.0.2",
    "electron-builder": "^21.2.0",
    "foreman": "^3.0.1",
    "redux-devtools-extension": "^2.13.8",
    "typescript": "^3.5.3"
  }
}
